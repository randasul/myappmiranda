<%- include('bootheader') -%>

<%- include('menubar') -%>


<div class="jumbotron">
  <table class="table table-bordered table striped">
    <thead>
      <tr><th>Item</th><th>Description</th><th>Customselect</th>
      <th>Iwant</th><th>Contact</th><th>userId</th></tr>

      <% for(let i=0; i < musics.length; i++ ){
        music=musics[i]
        console.log(`i=${i} musicDocument=${music}`)
      %>

        <tr>
          <td><%= music.item %></td>
          <td><%= music.description %></td>
          <td><%= music.customselect %></td>
          <td><%= music.iwant %></td>
          <td><%= music.contact %></td>

        </tr>
      <%}%>

  <h2> Add another music post? </h2>
  <form method="post" action="/music">
      I want to trade: <input type="text" name="item"><br>
      Description (be honest!):<input type="text" name="description"> <br>
      Preferred method of trade:
        <select name="customselect">
              <option value="public">Public Spot Meetup (default)</option>
              <option value="tucasa">I come to you: Home Pickup</option>
              <option value="micasa">You come to me: Home Pickup</option>
              <option value="mail">Mail</option>
        </select><br>
      In return I'm seeking: <input type="text" name="iwant">
      You can contact me via: <input type="text" name="contact">
      <input type="submit" value="store">
  </form>
  <hr>
</div>

